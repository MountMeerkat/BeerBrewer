<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BeerBrewerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BeerBrewerApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutBackground="{StaticResource Backgroud}">

    <ShellContent 
        Title="Monitoring"
        Icon="graph.png"
        ContentTemplate="{DataTemplate local:MonitorView}"/>
    <ShellContent 
        Title="Automation"
        Icon="robot_inactive.png"
        ContentTemplate="{DataTemplate local:AutomationView}"/>
    <ShellContent 
        Title="Settings"
        Icon="config.png"
        ContentTemplate="{DataTemplate local:SettingsView}"/>
</Shell>
